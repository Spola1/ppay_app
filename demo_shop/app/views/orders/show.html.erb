<div data-controller="line-item" class="container">
  <h1>Order for: <%=@order.created_at.strftime("%a, %d %b %Y")%></h1>
  <div class="row">
  <% @total = 0 %>
    <% @order.line_items.each do |item| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= item.product.name %></h5>
            <%= cl_image_tag item.product.photos.first.key, class:"img-fluid d-block", crop: :fill %>
            <p class="card-price text-center mt-2">Price: <%= item.product.price_cents %>₽</p>
            <p class="card-price text-center">Quantity: <%= item.quantity if item.quantity  %>₽</p>
            <p class="card-price text-center">Total: <%= item.product.price_cents * item.quantity %>₽</p>
            <% @total += item.product.price_cents * item.quantity %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Purchase #{@total}₽", @order.url, class: 'btn btn-primary mt-3' %>
</div>
