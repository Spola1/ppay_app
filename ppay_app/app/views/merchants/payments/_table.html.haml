- if payments.any?
  %table.items-list-table
    %thead.items-list-thead
      %tr
        %th.items-list-th номер заказа
        %th.items-list-th создан
        %th.items-list-th начало арбитража
        %th.items-list-th направление
        %th.items-list-th нац. валюта
        %th.items-list-th кол-во нац. валюты
        %th.items-list-th криптовалюта
        %th.items-list-th кол-во криптовалюты
        %th.items-list-th платежная система
        %th.items-list-th uuid
        %th.items-list-th статус
        %th.items-list-th статус изменен
        %th.items-list-th причина отмены

        %th.items-list-th
    
    %tbody
      - payments.each do |payment|
        %tr.items-list-tr
        %tr{ class: 'arbitration_tr' }
          %td.items-list-td-link
            - if payment.external_order_id.present?
              = link_to payment.external_order_id, payment_path(payment), data: { turbo_action: :advance }
          %td.items-list-td= payment.formatted_created_at
          %td.items-list-td= payment.formatted_started_arbitration_at
          %td.items-list-td= payment.human_type
          %td.items-list-td= payment.national_currency
          %td.items-list-td= payment.decorate.national_formatted
          %td.items-list-td= payment.cryptocurrency
          %td.items-list-td
            = payment.decorate.cryptocurrency_formatted
            - if payment.transactions.main.present?
              = "(#{payment.transactions.main.first.decorate.amount_formatted})"
          %td.items-list-td= payment.payment_system
          %td.items-list-td= payment.uuid.truncate(9)
          %td.items-list-td{ class: payment_status_class(payment) }
            = payment.human_payment_status
          %td.items-list-td= payment.formatted_status_changed_at
          %td.items-list-td= payment.human_cancellation_reason

- else
  .empty-list-text
    Платежей пока нет
