- unless payment.arbitration
  = simple_form_for payment, url: payment_path(payment), action: :update,
            data: { turbo_confirm: 'Вы уверены, что хотите отправить платёж на арбитраж?' } do |f|
    = f.hidden_field :arbitration, value: true
    .flex.space-x-3
      .flex-1
        .mb-1.text-xs
          = f.label :arbitration_reason, 'Выберите причину арбитража'
          %span.text-red-500.ml-1
            *
        = f.select :arbitration_reason, merchant_payment_arbitration_reasons_collection, { include_blank: true }, class: 'form-input-select h-[40px] text-xs'
      .flex-1
        .mb-1.text-xs
          = f.label :image, 'Загрузите чек'
          %span.text-red-500.ml-1
            *
        .file-field-container.flex.items-center
          = f.file_field :image, class: 'hidden', id: 'file-field'
          %label.btn.btn-secondary.btn-sm{ for: 'file-field', class: 'cursor-pointer grayy-button h-[40px] w-[200px] text-xs flex items-center justify-center' }
            = image_tag('/ssylka.png', class: 'inline-block align-middle mr-1', style: 'width: 22px; height: 22px;')
            %span.inline-block PDF/JPG/PNG
      .flex-shrink-0.mt-auto
        = f.submit 'На арбитраж', class: 'red-button h-[40px] text-xs'
