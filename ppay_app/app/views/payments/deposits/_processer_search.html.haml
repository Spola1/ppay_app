.show-payment
  .show-payment-block
    .proc-head
      - if payment.logo_image_tag.present?
        = payment.logo_image_tag
      - else
        .proc-logo
      .proc-text
        UID Check

    .proc-payment-waiting-block
      .proc-payment-waiting-img
      Идёт подготовка платежа
      .mt-2
        Ожидайте пожалуйста...

    = render 'payments/alerts_block'

    = render 'payments/uuid', payment:

  - if payment.arbitration
    = render 'shared/chat', payment:
