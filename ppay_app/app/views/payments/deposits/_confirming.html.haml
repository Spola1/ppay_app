.show-payment
  .show-payment-block
    .proc-head
      = render 'payments/merchant_logo', payment: payment
      .proc-text
        = render 'payments/select_locale', payment:, signature:

    .proc-payment-waiting-block
      .proc-payment-waiting-img
      = t('payments.payment processing')
      .mt-2
        = t('payments.expectation')

    = render 'payments/uuid', payment:

  - if payment.arbitration && payment.arbitration_reason != 'not_paid'
    = render 'shared/chat', payment:
