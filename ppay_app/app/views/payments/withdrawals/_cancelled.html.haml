.show-payment
  .show-payment-block
    .proc-head
      - if payment.logo_image_tag.present?
        = payment.logo_image_tag
      - else
        .proc-logo
      .proc-text
        UID Check

    .proc-payment-cancelled-block
      .proc-payment-cancelled-img
      Платеж отменён !

    .proc-payment-cancelled-links-block
      = link_to "вернуться в магазин", payment.redirect_url

    = render 'payments/uuid', payment:, class: 'text-center'

  - if payment.arbitration
    = render 'shared/chat', payment:
