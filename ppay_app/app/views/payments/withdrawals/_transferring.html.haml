.show-payment
  .show-payment-block
    .proc-head
      = render 'payments/merchant_logo', payment: payment
      .proc-text
        UID Check

    .proc-payment-waiting-block
      .proc-payment-waiting-img
      = t('payments.withdraw.attributes.money_transfer')

    = render 'payments/uuid', payment:, class: 'text-center'

  - if payment.arbitration
    = render 'shared/chat', payment:
  
  :javascript
    window.paymentLanguage = "#{j payment.language_from_locale}";