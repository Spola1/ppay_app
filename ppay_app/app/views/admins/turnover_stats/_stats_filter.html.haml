= simple_form_for :stats_filters, url: turnover_stats_path,
  method: :get,
  data: { turbo_frame: 'content', turbo_action: :advance, controller: 'reset-form-button' },
  html: { class: 'filters'} do |f|

  .filters-grid
    = f.input :created_from, as: :date, html5: true, input_html:{ value: params.dig(:stats_filters, :created_from) }
    = f.input :created_to, as: :date, html5: true,  input_html:{ value: params.dig(:stats_filters, :created_to) }

  = f.submit t('buttons.submit'), class: 'form-submit'
  = link_to t('buttons.reset'), turnover_stats_path, data: { turbo_action: :advance }, class: 'reset-button'
