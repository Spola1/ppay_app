%section.wrap
  .card-wrap
    .item-card
      %h1.mb-4.text-xl Объявления

      %table
        %thead.item-list-thead
          %tr
            %th.items-list-th ID
            %th.items-list-th-text-left КАРТА
            %th.items-list-th-text-left КОММЕНТАРИЙ
            %th.items-list-th-text-left ПЛАТЕЖИ

        %tbody
          - @advertisements.each do |ad|
            %tr.items-list-tr
              %td.items-list-td-link= link_to ad.id, ad
              %td.items-list-td-break-all= ad.card_info
              %td.items-list-td-break-all= ad.comment
              %td.items-list-td.flex.flex-wrap
                .toast-row{ 'data-controller': 'countdown-row' }
                  %div.grid.grid-cols-9.gap-2
                    - ad.payments.in_hotlist.each do |payment|
                      .text-xs.p-1{ class: 'max-w-[140px] min-w-[120px]', 'data-controller': 'countdown' }
                        = link_to payment_path(payment), data: { turbo: false }, class: 'block' do
                          = render 'processers/advertisements/hotlist_payment', payment:

      .card-wrap
        = render 'shared/pagination', pagy: @pagy
