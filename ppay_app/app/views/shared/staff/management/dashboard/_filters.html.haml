= simple_form_for :payment_filters, url: dashboard_path,
  defaults: { required: false },
  method: :get,
  data: { turbo_frame: 'content', turbo_action: :advance, controller: 'reset-form-button' },
  html: { class: 'filters'} do |f|

  .filters-grid.filters-grid-3
    = f.input :period, collection: period_collection,
                       selected: payment_filters_params(:period),
                       include_blank: '- Не выбрано -'

    = f.input :created_from, as: :date,
                             html5: true,
                             input_html:{ value: payment_filters_params(:created_from) }

    = f.input :created_to, as: :date,
                           html5: true,
                           input_html:{ value: payment_filters_params(:created_to) }

  .filters-grid.filters-grid-3
    = f.input :national_currency, collection: NationalCurrency.pluck(:name),
                                  include_blank: 'Все',
                                  selected: payment_filters_params(:national_currency)

    = f.input :merchant, collection: merchants_collection,
                         include_blank: 'Все',
                         selected: payment_filters_params(:merchant)

  = f.submit t('buttons.submit'), class: 'form-submit'
  = link_to t('buttons.reset'), dashboard_path, data: { turbo_action: :advance }, class: 'reset-button'
