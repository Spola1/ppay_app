.mt-8
  %table.item-card-table
    %tbody
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Создана в
        %td.item-card-td= @balance_request.decorate.formatted_created_at
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Тип
        %td.item-card-td= @balance_request.requests_type
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Сумма
        %td.item-card-td= "#{ @balance_request.amount } #{ @balance_request.user.balance.currency }"
      - if @balance_request.amount_minus_commission.present?
        %tr.items-list-tr
          %td.item-card-td.item-card-td-label= role_namespace == 'admins' ? 'Нужно перевести' : 'Вы получите'
          %td.item-card-td= "#{ @balance_request.amount_minus_commission } #{ @balance_request.user.balance.currency }"
        %tr.items-list-tr
          %td.item-card-td.item-card-td-label Комиссия
          %td.item-card-td= "#{ @balance_request.amount - @balance_request.amount_minus_commission } #{ @balance_request.user.balance.currency }"
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Статус
        %td.item-card-td= @balance_request.status
      - if role_namespace == 'admins'
        %tr.items-list-tr
          %td.item-card-td.item-card-td-label Комментарий
          %td.item-card-td= @balance_request.short_comment
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Криптоадрес
        %td.item-card-td= @balance_request.crypto_address
      %tr.items-list-tr
        %td.item-card-td.item-card-td-label Пользователь
        %td.item-card-td= @balance_request.user.decorate.audit_user_info
