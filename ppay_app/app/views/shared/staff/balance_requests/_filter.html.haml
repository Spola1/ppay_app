= simple_form_for :balance_request_filters, url: balance_requests_path,
  method: :get,
  data: { turbo_frame: 'content', turbo_action: :advance, controller: 'reset-form-button' },
  html: { class: 'filters'} do |f|

  .filters-grid
    = f.input :status, collection: BalanceRequest.statuses.keys,
                       include_blank: 'Все',
                       selected: balance_request_filters_params(:status),
                       required: false

  = f.submit t('buttons.submit'), class: 'form-submit'
  = link_to t('buttons.reset'), balance_requests_path, data: { turbo_action: :advance }, class: 'reset-button'
