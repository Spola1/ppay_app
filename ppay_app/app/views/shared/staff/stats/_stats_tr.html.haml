%tr.item-card-tr
  %td.item-card-td.item-card-td-label
    - if local_assigns[:icon]
      %span.mr-1= fa_icon icon
    = title
  %td.item-card-td.text-base
    %span{ class: local_assigns[:value_color] }
      = local_assigns[:float_number] ? format('%.2f', value) : value
    = local_assigns[:currency]
