%div.login_block.text-xs.text-gray-900.font-light.py-2.px-4
  - if user_signed_in?
    %p 
      Вы залогинены как:
      %strong
        = current_user.nickname
      %br
      = "(#{current_user.email})"
      %br
      %br
      %p
        Баланс:
        = current_user.balance.amount
        USDT
    //= link_to 'Редактировать профиль', edit_user_registration_path, :class => 'navbar-link'
    = button_to 'Выйти', destroy_session_path(current_user), method: :delete, data: { turbo: false }, :class => 'navbar-link underline'
  - else
    = link_to 'Войти', new_user_session_path, :class => 'navbar-link underline'